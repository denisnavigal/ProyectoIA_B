---
interface Props {
    nombre: string;
    descripcion: string;
    precio: number;
    imagen: string;
    categoria: string;
}

const { nombre, descripcion, precio, imagen, categoria } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden">
    <img src={imagen} alt={nombre} class="w-full h-48 object-cover"/>
    <div class="p-4">
        <span class="text-sm text-amber-600">{categoria}</span>
        <h3 class="text-xl font-bold mt-1">{nombre}</h3>
        <p class="text-gray-600 mt-2">{descripcion}</p>
        <p class="text-lg font-bold text-amber-800 mt-2">${precio}</p>
    </div>
</div>