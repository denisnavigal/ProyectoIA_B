<form class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md" id="opinionForm">
    <h2 class="text-2xl font-bold mb-4">Comparte tu opinión</h2>
    
    <div class="mb-4">
        <label for="plato" class="block text-gray-700 mb-2">Platillo</label>
        <select id="plato" name="plato" required class="w-full p-2 border rounded">
            <option value="">Selecciona un platillo</option>
            <option value="paella">Paella</option>
            <option value="pasta">Pasta</option>
            <option value="pizza">Pizza</option>
        </select>
    </div>

    <div class="mb-4">
        <label for="calificacion" class="block text-gray-700 mb-2">Calificación</label>
        <select id="calificacion" name="calificacion" required class="w-full p-2 border rounded">
            <option value="5">⭐⭐⭐⭐⭐ Excelente</option>
            <option value="4">⭐⭐⭐⭐ Muy bueno</option>
            <option value="3">⭐⭐⭐ Bueno</option>
            <option value="2">⭐⭐ Regular</option>
            <option value="1">⭐ Necesita mejorar</option>
        </select>
    </div>

    <div class="mb-4">
        <label for="comentario" class="block text-gray-700 mb-2">Comentario</label>
        <textarea
            id="comentario"
            name="comentario"
            required
            class="w-full p-2 border rounded"
            rows="4"
        ></textarea>
    </div>

    <button
        type="submit"
        class="w-full bg-amber-600 text-white py-2 px-4 rounded hover:bg-amber-700"
    >
        Enviar opinión
    </button>
</form>

<script>
    const form = document.getElementById('opinionForm');
    form?.addEventListener('submit', (e) => {
        e.preventDefault();
        // Aquí se implementaría la lógica para enviar la opinión
        alert('¡Gracias por tu opinión!');
        form.reset();
    });
</script>