---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Restaurante - Menú y Opiniones" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav class="bg-amber-800 text-white p-4">
			<div class="container mx-auto flex justify-between items-center">
				<a href="/" class="text-2xl font-bold">Mi Restaurante</a>
				<div class="space-x-4">
					<a href="/menu">Menú</a>
					<a href="/opiniones">Opiniones</a>
				</div>
			</div>
		</nav>
		<main class="container mx-auto p-4">
			<slot />
		</main>
		<footer class="bg-amber-800 text-white p-4 mt-8">
			<div class="container mx-auto text-center">
				<p>&copy; 2024 Mi Restaurante. Todos los derechos reservados.</p>
			</div>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #f8f5f0;
	}
</style>