---
import Layout from '../layouts/Layout.astro';
import OpinionForm from '../components/OpinionForm.astro';

const opiniones = [
    {
        plato: "Paella Valenciana",
        calificacion: 5,
        comentario: "¡Excelente! La mejor paella que he probado.",
        autor: "María G.",
        fecha: "2024-01-15"
    },
    {
        plato: "Pasta al Pesto",
        calificacion: 4,
        comentario: "Muy buena pasta, el pesto estaba muy fresco.",
        autor: "Juan R.",
        fecha: "2024-01-10"
    }
];
---

<Layout title="Opiniones - Mi Restaurante">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold text-center text-amber-800 mb-8">Opiniones de nuestros clientes</h1>
        
        <div class="mb-12">
            <OpinionForm />
        </div>

        <div class="space-y-6">
            {opiniones.map((opinion) => (
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <div class="flex justify-between items-start mb-2">
                        <h3 class="text-xl font-bold">{opinion.plato}</h3>
                        <span class="text-amber-500">
                            {'⭐'.repeat(opinion.calificacion)}
                        </span>
                    </div>
                    <p class="text-gray-600 mb-4">{opinion.comentario}</p>
                    <div class="text-sm text-gray-500">
                        <span>{opinion.autor}</span> • 
                        <time>{new Date(opinion.fecha).toLocaleDateString()}</time>
                    </div>
                </div>
            ))}
        </div>
    </div>
</Layout>